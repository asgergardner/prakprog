set terminal png
set output "n_convergence.png"
set grid
set title "Convergence of ground state wrt. npoints"
set xlabel "npoints"
set ylabel "Energy [Hartree]"
plot\
        [0:100][-1:1] "n_convergence.txt" index 0 using 1:2 with points pointtype 31 title "calculated energy",\
        "n_convergence.txt" index 0 using 1:3 with lines linetype 5 title "tabulated energy"     
